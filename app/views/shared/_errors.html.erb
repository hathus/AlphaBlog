<% if obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show success" role="alert">
    <h2><%= pluralize(obj.errors.count, "error") %> make it impossible to complete the requested action for the following reasons:</h2>
    <ul>
      <% obj.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
