<div class="container">
  <div class="generic-container">
    <%= render 'layouts/messages' %>
    <h1 class="text-center"><%= @user.username %> profile</h1>
    <%= gravatar_for(@user, size: 200) %>
    <br>
    <div class="text-center mt-4">
      <% if logged_in? and @user == current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
      <% end %>
    </div>
    <br>
    <h3 class="text-center">Articles</h3>
    <div class="flickr_pagination mb-3">
      <div class="page_info">
        <%= page_entries_info @articles %>
      </div>
      <%= will_paginate @articles, :container => false %>
    </div>
    <%= render "articles/articles" %>
  </div>
</div>
