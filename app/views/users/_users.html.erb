<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-6">
      <div class="card text-center shadow p-3 mb-4 bg-body rounded">
        <div class="card-header fst-italic">
          <%= link_to user.username, user %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= gravatar_for(user, size: 150) %></h5>
          <p class="card-text"><%= pluralize(user.articles.count, "articles") %></p>
          <%= link_to 'Show', user_path(user), class: 'btn btn-outline-primary' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-success' %>
        </div>
        <div class="card-footer text-muted">
          <small>
            Joined <%= time_ago_in_words(user.created_at) %> ago
          </small>
        </div>
      </div>
    </div>
  <% end %>
</div>