<div class="container">
  <br/>
  <div class="mt-5">
    <h1>Show category</h1>
    <h2>The category is: <%= @category.name %></h2>
  </div>
  <div class="text-center mt-4">
      <% if logged_in? and current_user.admin? %>
        <%= link_to "Edit the category", edit_category_path(@category), class: "btn btn-outline-info" %>
      <% end %>
      <%= link_to 'Return to all categories', categories_path, class: 'btn btn-outline-primary' %>
    </div>
    <br>
    <h3 class="text-center">Articles</h3>
    <div class="flickr_pagination mb-3">
      <div class="page_info">
        <%= page_entries_info @articles %>
      </div>
      <%= will_paginate @articles, :container => false %>
    </div>
    <%= render "articles/articles" %>
  </div>
</div>